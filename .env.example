# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/suna_lite

# CoexistAI Configuration
# If you want to run CoexistAI locally, clone https://github.com/SPThole/CoexistAI into ./coexistai or set COEXISTAI_BASE_URL to a running instance.
COEXISTAI_BASE_URL=http://coexistai:8000
COEXISTAI_API_KEY=

# Runner Configuration
RUNNER_BASE_URL=http://runner:8080

# API Keys
# OpenAI API key (for future LLM integration)
OPENAI_API_KEY=your_openai_api_key_here

# Google API key (for Gemini and embeddings)
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic API key (alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily API key (optional, for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Agent Configuration
MAX_ITERATIONS=10
TIMEOUT_SECONDS=30

# Security (for future authentication)
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis Configuration (for future caching)
# REDIS_URL=redis://localhost:6379/0

# Browser Tool Configuration
BROWSER_TIMEOUT=30
BROWSER_USER_AGENT=Suna-Lite-Agent/1.0

# Rate Limiting (for future implementation)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60