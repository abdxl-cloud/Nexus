# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/suna_lite

# CoexistAI Configuration
COEXISTAI_BASE_URL=http://coexistai:8000
COEXISTAI_API_KEY=

# Runner Configuration
RUNNER_BASE_URL=http://runner:8080

# API Keys - Add your keys here for enhanced functionality
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
TAVILY_API_KEY=

# Agent Configuration
MAX_ITERATIONS=10
TIMEOUT_SECONDS=30

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Browser Tool Configuration
BROWSER_TIMEOUT=30
BROWSER_USER_AGENT=Suna-Lite-Agent/1.0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60